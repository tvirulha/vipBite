<div id="vipBite_Body" class="body-content-container">
	<%= form_tag(controller: 'account', action: 'vipBite_Register', method: "post") do %>
	<div id="body_RegisterSection">
		<!-- THIS SECTION INCLUDE THE FOLLOWING PARAMETER -->
		<!-- USER OBJECT: FIRSTNAME, LASTNAME, EMAIL, PASSWORD -->
		<!-- IN THIS SECTION WE WILL ALSO HAVE TO EMBEDDED THE LOGIC FOR PAYPAL -->
		<div id="account_register_container" class="register-container" style="background-color: cornflowerblue; color: white; position: relative;">
			<div style="margin-left: 10px; margin-bottom: 5px; font-family: cursive; font-size: 36px; font-weight: bold;">
				<label><b>Sign Up</b></label>
			</div>
			<div style="margin-left: 10px; font-family: cursive; margin-bottom: 15px;">
				<label style="font-size: 18px;">Become a VIPbite member.</label>
			</div>
			<div style="display:inline-block; margin-left: 10px; margin-bottom: 5px; font-family: cursive; font-size: 16px;">
				<label style="font-size: 16px;">First Name:</label>
				<br/>
				<input type="text" id="account_firstname" style="font-size: 16px; width:180px"/>
				<%= text_field_tag('firstName')%>
			</div>
			<div style="display:inline-block; margin-left: 10px; margin-bottom: 5px; font-family: cursive;">
				<label style="font-size: 16px;">Last Name:</label>
				<br/>
				<%= text_field_tag('lastName')%>
			</div>
			<div style="margin-left: 10px; margin-bottom: 5px; display: block; font-family: cursive">
				<label style="font-size: 16px;">Email:</label>
				<br/>
				<%= email_field_tag('email') %>
			</div>
			<div style="margin-left: 10px; margin-bottom: 5px; display: block; font-family: cursive">
				<label style="font-size: 16px;">Email:</label>
				<br/>
				<%= email_field_tag('re-enter email') %>
			</div>
			<div style="margin-left: 10px; margin-bottom: 5px; display: block; font-family: cursive">
				<label style="font-size: 16px;">Password:</label>
				<br/>
				<input type="password" id="account_PassId" style="font-size: 16px; width: 377px;"/>
				<%= password_field_tag('password')%>
			</div>
			<div style="margin-left: 10px; margin-bottom: 5px; display: block; font-family: cursive">
			<label style="font-size: 16px;">Password:</label>
				<br/>
				<input type="password" id="re_account_PassId" style="font-size: 16px; width: 377px;"/>
				<%= password_field_tag('re-enter password')%>
				</div>
			<div style="margin-left: 10px; margin-bottom: 10px; display: block; font-family: cursive">
				<label style="font-size: 16px;">Membership Type:</label>
				<br/>
				<input type="radio" name="membershipType" value="1 years membership">1 year subscription</input>
				<input type="radio" name="membershipType" value="life time">life time</input>
			</div>
			<div style="margin-left: 10px; margin-bottom: 10px; display: block; font-family: cursive; font-size: 16px;">
				<label>Payment Information:</label>
			</div>
			<input type="button" id="account_RegisterButton" value="Register" style="margin-left: 10px; margin-bottom: 20px;font-size: 16px; padding: 5px 20px; border-radius: 7px; font-family: cursive; text-align: center; letter-spacing: 1px; text-shadow: 0 1px 2px rgba(0,0,0,0.5); line-height: 126%;"/>
		</div>
	</div>
	<% end %>
</div>